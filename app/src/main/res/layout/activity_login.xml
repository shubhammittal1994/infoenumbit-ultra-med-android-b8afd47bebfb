<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <ImageView android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/app_icon"
            android:id="@+id/imageView"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="80dp"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="@color/button_red_color"
            android:textSize="35dp"
            android:id="@+id/textLogin"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>


        <EditText android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edittext_email"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:layout_below="@+id/textLogin"
            android:layout_marginBottom="10dp"
            android:textCursorDrawable="@color/button_red_color"
            android:textColorHint="@color/button_red_color"
            android:textColor="@color/button_red_color"
            android:hint="Email"/>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/button_red_color"
            android:layout_below="@+id/edittext_email"
            android:id="@+id/emailView"/>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/llPassView"
            android:layout_below="@+id/emailView">


            <EditText android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:id="@+id/edittext_password"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:textColorHint="@color/button_red_color"
                android:textColor="@color/button_red_color"
                android:textSize="18sp"
                android:textCursorDrawable="@color/button_red_color"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"/>
            <ImageView android:layout_width="0dp"
                android:layout_weight=".2"
                android:src="@drawable/showpass"
                android:tint="@color/button_red_color"
                android:layout_gravity="bottom"
                android:visibility="visible"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/image_showpass"/>

            <ImageView android:layout_width="0dp"
                android:layout_weight=".2"
                android:tint="@color/button_red_color"
                android:src="@drawable/hidepass"
                android:visibility="gone"
                android:layout_gravity="bottom"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/image_hidepass"/>

        </LinearLayout>
        <View android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/button_red_color"
            android:layout_below="@+id/llPassView"
            android:id="@+id/passView"/>

        <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passView"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:text="LOGIN"
            android:textColor="@color/button_red_color"
            android:background="@drawable/drawable_roundcorners"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:textSize="18sp"
            android:id="@+id/btn_login"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textSize="18dp"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:id="@+id/text_forgotpassword"
            android:textColor="@color/button_red_color"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No account yet? Create one"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text_forgotpassword"
            android:id="@+id/text_register"
            android:textColor="@color/button_red_color"
            android:layout_marginTop="30dp"/>

    </RelativeLayout>
</RelativeLayout>
